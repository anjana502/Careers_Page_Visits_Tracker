{
  "manifest_version": 3,
  "name": "Career Site Visit Tracker",
  "version": "1.0",
  "description": "Tracks when you last visited company career pages",
  "permissions": ["storage", "tabs", "notifications"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon48.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
